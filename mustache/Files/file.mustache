<h1>{{title}} : {{path}}</h1>
<form class = "form-horizontal" method = "post" action = "#/Files/{{page}}">
	<div class = "form-group">
		<label class = "col-sm-2 control-label" for = "file">File Name</label>
		<div class = "col-sm-10">
			<input type = "hidden" name = "fileName" value = "{{path}}" />
			<a href = "{{link}}">{{page}}/{{path}}</a>
		</div>
	</div>	
	<div class = "form-group">
		<label class = "col-sm-2 control-label" for = "file">File</label>
		<div class = "col-sm-10">
			<input type = "file" name = "file" id = "file" />
		</div>
	</div>
	{{>Wiki/metaData}}
	<div class = "form-group">
		<div class = "col-sm-offset-2 col-sm-10">
			<button type = "submit" class = "btn btn-primary">Update</button>
		</div>
	</div>
</form>
