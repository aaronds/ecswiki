<h1>Edit {{title}}</h1>
{{>Common/error}}
<form class = "form-horizontal" method = "post" action = "#/Wiki/edit/{{path}}">
	<div class = "row">
		<textarea id = "contentInput" name = "content" class = "col-sm-12 markdown-full">{{markdown}}</textarea>
		<input type = "hidden" name = "_rev" value = "{{_rev}}" />
	</div>
	{{>Wiki/encryption}}
	<div class = "form-group">	
		<label class = "col-sm-2 control-label" for = "">Options</label>
		<div class = "col-sm-10">
			<label class = "checkbox-inline"><input type = "checkbox" name = "ignoreRev" value = "1" /> Overwrite</label>
		</div>
	</div>
	<div class = "form-group">
		<div class = "col-sm-offset-2 col-sm-10">
			<button type = "submit" class = "btn btn-primary">Save</button>
		</div>
	</div>
</form>
