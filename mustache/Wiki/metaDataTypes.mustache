{{#typeDate}}
	<div class = "form-group">
		<label class = "col-sm-2 control-label">{{title}}</label>
		<div class = "col-sm-10">
			<input type = "date" class = "form-control" id = "{{name}}MetaEl" name = "metaData[{{name}}][value]" value = "{{value}}" />
		</div>
	</div>
{{/typeDate}}
{{#typeText}}
	<div class = "form-group">
		<label class = "col-sm-2 control-label">{{title}}</label>
		<div class = "col-sm-10">
			<input type = "text" class = "form-control" id = "{{name}}MetaEl" name = "metaData[{{name}}][value]" value = "{{value}}" />
		</div>
	</div>
{{/typeText}}
{{#typeNumber}}
	<div class = "form-group">
		<label class = "col-sm-2 control-label">{{title}}</label>
		<div class = "col-sm-10">
			<input type = "number" class = "form-control" id = "{{name}}MetaEl" name = "metaData[{{name}}][value]" {{#value}}{{#max}}max = "{{max}}" {{/max}}{{#min}}min = "{{min}}" {{/min}}{{#step}}step = "{{step}}" {{/step}} value = "{{number}}" {{/value}} />
		</div>
	</div>
{{/typeNumber}}
{{#typeSelect}}
	<div class = "form-group">
		<label class = "col-sm-2 control-label">{{title}}</label>
		<div class = "col-sm-10">
			<select class = "form-control" id = "{{name}}MetaEl" name = "metaData[{{name}}][value]">
				{{#value}}
					{{#empty}}<option value = "">(None)</option>{{/empty}}
					{{#optionGroups}}
						<optgroup label = "{{name}}">
							{{#options}}{{>Wiki/metaDataOption}}{{/options}}
						</optgroup>
					{{/optionGroups}}
					{{^optionGroups}}
						{{#options}}{{>Wiki/metaDataOption}}{{/options}}
					{{/optionGroups}}
				{{/value}}
			</select>
		</div>
	</div>
{{/typeSelect}}
